---
import SEO from '../components/SEO.astro';

export interface Props {
  title: string;
  description: string;
  image?: string;
  type?: 'website' | 'article' | 'profile';
  publishedTime?: string;
  author?: string;
}

const { title, description, image, type, publishedTime, author } = Astro.props;
const currentPath = Astro.url.pathname;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <SEO
      title={title}
      description={description}
      image={image}
      type={type}
      publishedTime={publishedTime}
      author={author}
    />
    <!-- Google Analytics (Replace with your actual GA4 ID) -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-XXXXXXXXXX"></script>
    <script>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());
      gtag('config', 'G-XXXXXXXXXX');
    </script>
  </head>
  <body class="bg-white text-gray-900 font-sans">
    <!-- Navigation -->
    <nav class="bg-white border-b border-gray-200 sticky top-0 z-50 backdrop-blur-sm bg-white/95">
      <div class="container mx-auto px-6 py-5">
        <div class="flex justify-between items-center">
          <a href="/" class="text-2xl font-display font-bold text-gray-900 hover:text-mcgennis-gold transition-colors tracking-tight">
            The McGennis Family
          </a>
          <div class="hidden md:flex space-x-8">
            <a href="/" class={`text-sm font-medium tracking-wide hover:text-mcgennis-gold transition-colors pb-1 ${currentPath === '/' ? 'text-mcgennis-gold border-b border-mcgennis-gold' : 'text-gray-600'}`}>Home</a>
            <a href="/about" class={`text-sm font-medium tracking-wide hover:text-mcgennis-gold transition-colors pb-1 ${currentPath === '/about' ? 'text-mcgennis-gold border-b border-mcgennis-gold' : 'text-gray-600'}`}>About</a>
            <a href="/family" class={`text-sm font-medium tracking-wide hover:text-mcgennis-gold transition-colors pb-1 ${currentPath === '/family' ? 'text-mcgennis-gold border-b border-mcgennis-gold' : 'text-gray-600'}`}>Family</a>
            <a href="/businesses" class={`text-sm font-medium tracking-wide hover:text-mcgennis-gold transition-colors pb-1 ${currentPath === '/businesses' ? 'text-mcgennis-gold border-b border-mcgennis-gold' : 'text-gray-600'}`}>Businesses</a>
            <a href="/blog" class={`text-sm font-medium tracking-wide hover:text-mcgennis-gold transition-colors pb-1 ${currentPath === '/blog' ? 'text-mcgennis-gold border-b border-mcgennis-gold' : 'text-gray-600'}`}>Blog</a>
            <a href="/contact" class={`text-sm font-medium tracking-wide hover:text-mcgennis-gold transition-colors pb-1 ${currentPath === '/contact' ? 'text-mcgennis-gold border-b border-mcgennis-gold' : 'text-gray-600'}`}>Contact</a>
          </div>
          <!-- Mobile Menu Button -->
          <button id="mobile-menu-btn" class="md:hidden text-gray-700">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
            </svg>
          </button>
        </div>
        <!-- Mobile Menu -->
        <div id="mobile-menu" class="hidden md:hidden mt-4 space-y-2">
          <a href="/" class="block py-2 text-gray-700 hover:text-mcgennis-gold transition">Home</a>
          <a href="/about" class="block py-2 text-gray-700 hover:text-mcgennis-gold transition">About</a>
          <a href="/family" class="block py-2 text-gray-700 hover:text-mcgennis-gold transition">Family</a>
          <a href="/businesses" class="block py-2 text-gray-700 hover:text-mcgennis-gold transition">Businesses</a>
          <a href="/blog" class="block py-2 text-gray-700 hover:text-mcgennis-gold transition">Blog</a>
          <a href="/contact" class="block py-2 text-gray-700 hover:text-mcgennis-gold transition">Contact</a>
        </div>
      </div>
    </nav>

    <!-- Main Content -->
    <main>
      <slot />
    </main>

    <!-- Footer -->
    <footer class="bg-gray-900 text-white mt-16">
      <div class="container mx-auto px-4 py-12">
        <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
          <!-- About -->
          <div>
            <h3 class="text-xl font-display font-bold mb-4 text-mcgennis-gold">The McGennis Family</h3>
            <p class="text-gray-400">Jefferson City, Missouri's most notable family. Entrepreneurs, ministry leaders, and community builders.</p>
          </div>

          <!-- Quick Links -->
          <div>
            <h3 class="text-xl font-bold mb-4">Quick Links</h3>
            <ul class="space-y-2 text-gray-400">
              <li><a href="/" class="hover:text-mcgennis-gold transition">Home</a></li>
              <li><a href="/about" class="hover:text-mcgennis-gold transition">About Us</a></li>
              <li><a href="/family" class="hover:text-mcgennis-gold transition">Our Family</a></li>
              <li><a href="/businesses" class="hover:text-mcgennis-gold transition">Our Businesses</a></li>
              <li><a href="/blog" class="hover:text-mcgennis-gold transition">Blog</a></li>
            </ul>
          </div>

          <!-- Our Businesses -->
          <div>
            <h3 class="text-xl font-bold mb-4">Our Ventures</h3>
            <ul class="space-y-2 text-gray-400">
              <li>BXP</li>
              <li>The Honey Homestead</li>
              <li>What's the Process for</li>
              <li>Toxic Tournaments</li>
              <li>Nostalgia Nuke</li>
              <li>LoHP</li>
            </ul>
          </div>

          <!-- Social Media -->
          <div>
            <h3 class="text-xl font-bold mb-4">Connect With Us</h3>
            <div class="flex space-x-4">
              <a href="https://www.facebook.com/calebmichaelmcgennis" target="_blank" rel="noopener noreferrer" class="text-gray-400 hover:text-mcgennis-gold transition" aria-label="Caleb's Facebook">
                <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
                </svg>
              </a>
              <a href="https://www.facebook.com/stephanie.davis.900388" target="_blank" rel="noopener noreferrer" class="text-gray-400 hover:text-mcgennis-gold transition" aria-label="Stephanie's Facebook">
                <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
                </svg>
              </a>
            </div>
            <div class="mt-4">
              <p class="text-gray-400 text-sm">üìç Jefferson City, Missouri</p>
            </div>
          </div>
        </div>

        <div class="border-t border-gray-800 mt-8 pt-8 text-center text-gray-400">
          <p>&copy; {new Date().getFullYear()} The McGennis Family. All rights reserved.</p>
          <p class="mt-2 text-sm">Proudly serving Jefferson City, Missouri</p>
        </div>
      </div>
    </footer>

    <!-- Mobile Menu Toggle Script -->
    <script>
      const mobileMenuBtn = document.getElementById('mobile-menu-btn');
      const mobileMenu = document.getElementById('mobile-menu');

      mobileMenuBtn?.addEventListener('click', () => {
        mobileMenu?.classList.toggle('hidden');
      });
    </script>
  </body>
</html>

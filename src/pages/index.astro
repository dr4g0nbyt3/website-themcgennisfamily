            <a href="/businesses" class="inline-flex items-center justify-center px-8 py-4 border border-gray-300 text-gray-700 font-medium tracking-wide hover:border-mcgennis-navy hover:text-mcgennis-navy transition-all duration-300">
              Our Businesses
            </a>
          </div>
        </div>

        <!-- Family Photo -->
        <div class="order-1 lg:order-2">
          <div class="relative">
            <img
              src="/images/mcgennis-family-stephanie-caleb-leonardo-jefferson-city.jpg"
              alt="The McGennis Family - Stephanie, Caleb, and Leonardo in Jefferson City, Missouri"
              class="w-full h-auto shadow-xl"
              width="800"
              height="1000"
            />

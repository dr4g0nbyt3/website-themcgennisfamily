const recipeSchema = {
  "@context": "https://schema.org",
  "@type": "Recipe",
  "name": "Classic Pot Roast - A Family Sunday Dinner",
  "image": [
    "https://themcgennisfamily.com/images/recipes/pot-roast/step6-meat-on-veggies.png",
    "https://themcgennisfamily.com/images/recipes/pot-roast/step8-covered-pot-ready-oven.png"
  ],
  "author": {
    "@type": "Person",
    "name": "Stephanie Kay McGennis",
    "url": "https://themcgennisfamily.com/family/stephanie"
  },
  "datePublished": "2024-12-18",
  "description": "A comforting family dinner that's perfect for Sunday meals. This classic pot roast recipe creates tender, flavorful meat with delicious vegetables.",
  "prepTime": "PT20M",
  "cookTime": "PT3H",
  "totalTime": "PT3H20M",
  "recipeYield": "6 servings",
  "recipeCategory": "Main Course",
  "recipeCuisine": "American",
  "keywords": "pot roast, comfort food, family dinner, Sunday roast, beef recipe",
  "recipeIngredient": [
    "3-4 lb chuck roast",
    "2 lbs potatoes, quartered",
    "1 lb carrots, cut into chunks",
    "1 large onion, quartered",
    "4 cups beef broth",
    "Salt and pepper to taste",
    "2 tablespoons olive oil",
    "3 cloves garlic, minced",
    "2 bay leaves",
    "1 teaspoon dried thyme"
  ],
  "recipeInstructions": [
    {
      "@type": "HowToStep",
      "name": "Season the meat",
      "text": "Season the chuck roast generously with salt and pepper on all sides.",
      "url": "https://themcgennisfamily.com/blog/alattetodomama/recipes/pot-roast#step1",
      "image": "https://themcgennisfamily.com/images/recipes/pot-roast/step1-meat-seasoned.png"
    },
    {
      "@type": "HowToStep",
      "name": "Brown the meat",
      "text": "Heat olive oil in a large Dutch oven over medium-high heat. Brown the meat on all sides, about 3-4 minutes per side.",
      "url": "https://themcgennisfamily.com/blog/alattetodomama/recipes/pot-roast#step2",
      "image": "https://themcgennisfamily.com/images/recipes/pot-roast/step2-meat-browned.png"
    },
    {
      "@type": "HowToStep",
      "name": "Remove meat",
      "text": "Remove the browned meat from the pot and set aside.",
      "url": "https://themcgennisfamily.com/blog/alattetodomama/recipes/pot-roast#step3",
      "image": "https://themcgennisfamily.com/images/recipes/pot-roast/step3-meat-removed.png"
    },
    {
      "@type": "HowToStep",
      "name": "Prepare vegetables",
      "text": "Add vegetables (potatoes, carrots, onions) to the pot.",
      "url": "https://themcgennisfamily.com/blog/alattetodomama/recipes/pot-roast#step4",
      "image": "https://themcgennisfamily.com/images/recipes/pot-roast/step4-veggies-in-pot.png"
    },
    {
      "@type": "HowToStep",
      "name": "Add broth",
      "text": "Pour beef broth into the pot. Add garlic, bay leaves, and thyme.",
      "url": "https://themcgennisfamily.com/blog/alattetodomama/recipes/pot-roast#step5",
      "image": "https://themcgennisfamily.com/images/recipes/pot-roast/step5-broth-poured.png"
    },
    {
      "@type": "HowToStep",
      "name": "Add meat back",
      "text": "Place the browned meat on top of the vegetables.",
      "url": "https://themcgennisfamily.com/blog/alattetodomama/recipes/pot-roast#step6",
      "image": "https://themcgennisfamily.com/images/recipes/pot-roast/step6-meat-on-veggies.png"
    },
    {
      "@type": "HowToStep",
      "name": "Heat to simmer",
      "text": "Bring to a simmer on the stovetop.",
      "url": "https://themcgennisfamily.com/blog/alattetodomama/recipes/pot-roast#step7",
      "image": "https://themcgennisfamily.com/images/recipes/pot-roast/step7-pot-simmering.png"
    },
    {
      "@type": "HowToStep",
      "name": "Cover and bake",
      "text": "Cover the pot with lid and transfer to a preheated 325°F oven. Bake for 3 hours until meat is fork-tender.",
      "url": "https://themcgennisfamily.com/blog/alattetodomama/recipes/pot-roast#step8",
      "image": "https://themcgennisfamily.com/images/recipes/pot-roast/step8-covered-pot-ready-oven.png"
    }
  ],
  "nutrition": {
    "@type": "NutritionInformation",
    "servingSize": "1 serving (approximately 1/6 of recipe)",
    "calories": "450 calories",
    "proteinContent": "35g",
    "fatContent": "22g",
    "carbohydrateContent": "28g"
  }
};
---

<BaseLayout
  title="Classic Pot Roast Recipe - A Latte to Do Mama"
  description="Stephanie's classic pot roast recipe with step-by-step photos. Tender beef roast with vegetables cooked to perfection."
  type="article"
  author="Stephanie Kay McGennis"
>
  <Fragment slot="head">
    <script type="application/ld+json" set:html={JSON.stringify(recipeSchema)} />
  </Fragment>

  <!-- Header -->
  <section class="bg-white py-20 md:py-32 px-4 border-b border-gray-200">
    <div class="container mx-auto max-w-4xl text-center">
      <a href="/blog/alattetodomama/recipes" class="inline-block mb-6 text-mcgennis-maroon hover:text-mcgennis-gold transition-colors text-sm font-medium">
        ← Back to Recipes
      </a>
      <h1 class="text-5xl md:text-6xl font-display font-bold mb-6 text-gray-900 leading-tight tracking-tight">
        Classic Pot Roast
      </h1>
      <div class="h-1 w-24 bg-brass-horizontal rounded-full shadow-sm mx-auto mb-6"></div>
      <p class="text-xl text-gray-500 font-light mb-4">
        A comforting family dinner that's perfect for Sunday meals
      </p>
      <p class="text-sm text-gray-400 mt-2">December 18, 2024</p>
      <p class="text-sm text-gray-500 mt-1">by <a href="/family/stephanie" class="hover:text-mcgennis-maroon transition-colors">Stephanie Kay McGennis</a></p>
    </div>
  </section>

  <!-- Social Sharing -->
  <section class="py-8 px-4 border-b border-gray-200">
    <div class="container mx-auto max-w-4xl">
      <div class="flex items-center justify-between flex-wrap gap-4">
        <p class="text-sm text-gray-600 font-medium">Share this recipe:</p>
        <div class="flex items-center gap-3">
          <a href="https://www.facebook.com/sharer/sharer.php?u=https://themcgennisfamily.com/blog/alattetodomama/recipes/pot-roast" target="_blank" rel="noopener noreferrer" class="inline-flex items-center gap-2 px-4 py-2 bg-mcgennis-navy hover:bg-opacity-90 text-white rounded-lg transition-all text-sm font-medium shadow-sm hover:shadow-md" aria-label="Share on Facebook">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
            </svg>
            Share
          </a>
          <a href="https://twitter.com/intent/tweet?url=https://themcgennisfamily.com/blog/alattetodomama/recipes/pot-roast&text=Classic%20Pot%20Roast%20Recipe" target="_blank" rel="noopener noreferrer" class="inline-flex items-center gap-2 px-4 py-2 bg-mcgennis-maroon hover:bg-opacity-90 text-white rounded-lg transition-all text-sm font-medium shadow-sm hover:shadow-md" aria-label="Share on Twitter">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723c-.951.555-2.005.959-3.127 1.184a4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z"/>

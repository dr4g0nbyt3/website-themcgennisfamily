        <a href="/blog/alattetodomama/mops-morning" class="group bg-white rounded-xl hover:shadow-lg transition-all duration-300 border border-gray-200 hover:border-mcgennis-maroon overflow-hidden">
          <div class="h-48 overflow-hidden">
            <img
              src="/images/blog/mops-prep.png"
              alt="MOPS Morning"
              class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500"
              loading="lazy"
            />

---
import BaseLayout from '../../layouts/BaseLayout.astro';

const blogPosts = [
  {
    title: "Coffee Shop Prayers: Finding God in the Drive-Thru Line",
    slug: "coffee-shop-prayers",
    date: "December 19, 2025",
    excerpt: "Let me tell you something: this mama loves coffee. From Dutch Bros runs to Bible time, finding sacred moments in the everyday chaos.",
    image: null,
  },
  {
    title: "Lists, Goals, and Changed Plans",
    slug: "lists-goals-changed-plans",
    date: "2024",
    excerpt: "That sound is my soul cringing at the phrase \"changed plans.\"",
    image: null,
  },
  {
    title: "Fall Allergies and Prayer",
    slug: "fall-allergies-and-prayer",
    date: "October 6, 2023",
    excerpt: "The literal bane of my existence when I'm trying to live my best pumpkin spice life.",
    image: "/images/blog/leo-yard.png",
  },
  {
    title: "MOPS Morning",
    slug: "mops-morning",
    date: "September 12, 2023",
    excerpt: "The excitement and hope in my heart as I prepared for my first MOPS meeting of the Fall.",
    image: "/images/blog/mops-prep.png",
  },
  {
    title: "A Latte to Do - Introduction",
    slug: "a-latte-to-do",
    date: "September 5, 2023",
    excerpt: "Do people still blog? If they do, do other people still read it? I guess we'll see.",
    image: "/images/blog/a-latte-to-do-notepad.png",
  },
];
---

<BaseLayout
  title="A Latte to Do Mama - Stephanie McGennis Blog"
  description="Join Stephanie McGennis for real stories about motherhood, faith, and family life in Jefferson City, Missouri. Coffee-fueled parenting wisdom."
>
  <!-- Hero Section -->
  <section class="bg-white py-20 md:py-32 px-4 border-b border-gray-200">
    <div class="container mx-auto text-center max-w-4xl">
      <h1 class="text-6xl md:text-7xl font-display font-bold mb-8 text-gray-900 leading-tight tracking-tight">
        A Latte to Do Mama
      </h1>
      <div class="h-1 w-24 bg-brass-horizontal rounded-full shadow-sm mx-auto mb-8"></div>
      <p class="text-xl md:text-2xl max-w-3xl mx-auto text-gray-500 font-light">
        Real stories about motherhood, faith, and the beautiful chaos of family life
      </p>
      <p class="text-lg mt-4 text-gray-400">by <a href="/family/stephanie" class="hover:text-mcgennis-maroon transition-colors">Stephanie Kay McGennis</a></p>
    </div>
  </section>

  <!-- Blog Posts -->
  <section class="py-24 px-4">
    <div class="container mx-auto max-w-4xl">
      <div class="space-y-8">
        {blogPosts.map((post) => (
          <a href={`/blog/alattetodomama/${post.slug}`} class="group block bg-white rounded-2xl hover:shadow-lg transition-all duration-300 border border-gray-200 hover:border-mcgennis-maroon overflow-hidden">
            {post.image && (
              <div class="h-64 overflow-hidden">
                <img
                  src={post.image}
                  alt={post.title}
                  class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500"
                />
              </div>
            )}
            <div class="p-8">
              <div class="flex justify-between items-start mb-4">
                <h2 class="text-3xl font-display font-bold text-gray-900 tracking-tight group-hover:text-mcgennis-maroon transition-colors">
                  {post.title}
                </h2>
                <span class="text-sm text-gray-400 font-light">{post.date}</span>
              </div>
              <p class="text-lg text-gray-500 mb-4 font-light leading-relaxed">
                {post.excerpt}
              </p>
              <div class="flex items-center text-mcgennis-maroon font-medium group-hover:text-mcgennis-gold transition-colors">
                Read More
                <svg class="w-5 h-5 ml-2 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
                </svg>
              </div>
            </div>
          </a>
        ))}
      </div>
    </div>
  </section>

  <!-- Recipes Section -->
  <section class="py-16 px-4 bg-white">
    <div class="container mx-auto max-w-4xl">
      <div class="text-center mb-12">
        <h2 class="text-4xl md:text-5xl font-display font-bold text-gray-900 mb-4 tracking-tight">
          alattetodo in the Kitch
        </h2>
        <div class="h-1 w-24 bg-brass-horizontal rounded-full shadow-sm mx-auto mb-4"></div>
        <p class="text-lg text-gray-500 font-light">
          Family-favorite recipes made with love (and coffee!)
        </p>
      </div>

      <a href="/blog/alattetodomama/recipes" class="group block bg-white p-8 rounded-2xl hover:shadow-lg transition-all duration-300 border border-gray-200 hover:border-mcgennis-maroon">
        <div class="flex items-center justify-between mb-6">
          <div class="flex items-center">
            <svg class="w-12 h-12 text-mcgennis-maroon mr-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"/>
            </svg>
            <div>
              <h3 class="text-3xl font-display font-bold text-gray-900 tracking-tight group-hover:text-mcgennis-maroon transition-colors">
                Recipes
              </h3>
              <p class="text-gray-500 font-light">
                Delicious meals from our family kitchen
              </p>
            </div>
          </div>
          <svg class="w-8 h-8 text-mcgennis-maroon group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
          </svg>
        </div>
        <p class="text-gray-600 leading-relaxed">
          Check out my collection of tried-and-true recipes! From comfort food classics to quick weeknight dinners,
          these are the meals that keep our family fed and happy.
        </p>
      </a>
    </div>
  </section>

  <!-- Buy Me a Coffee -->
  <section class="py-16 px-4">
    <div class="container mx-auto max-w-2xl">
      <div class="bg-white border border-gray-200 rounded-2xl p-8 md:p-12 text-center hover:shadow-lg transition-all duration-300">
        <svg class="w-16 h-16 text-mcgennis-maroon mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 15.546c-.523 0-1.046.151-1.5.454a2.704 2.704 0 01-3 0 2.704 2.704 0 00-3 0 2.704 2.704 0 01-3 0 2.704 2.704 0 00-3 0 2.704 2.704 0 01-3 0 2.701 2.701 0 00-1.5-.454M9 6v2m3-2v2m3-2v2M9 3h.01M12 3h.01M15 3h.01M21 21v-7a2 2 0 00-2-2H5a2 2 0 00-2 2v7h18zm-3-9v-2a2 2 0 00-2-2H8a2 2 0 00-2 2v2h12z"/>
        </svg>
        <h3 class="text-3xl font-display font-bold text-gray-900 mb-4 tracking-tight">Enjoying the Blog?</h3>
        <div class="h-1 w-16 bg-brass-horizontal rounded-full mx-auto mb-6"></div>
        <p class="text-lg text-gray-500 mb-6 leading-relaxed font-light">
          If these stories brighten your day or help you feel less alone in the beautiful chaos of motherhood,
          consider buying me a coffee! Your support helps keep the words flowing and the coffee brewing.
        </p>
        <a
          href="https://buymeacoffee.com/stephaniekaymcgennis"
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center px-8 py-4 bg-mcgennis-maroon hover:bg-mcgennis-gold text-white font-medium rounded-xl shadow-md hover:shadow-lg transition-all duration-300 text-lg tracking-wide"
        >
          <svg class="w-6 h-6 mr-2" fill="currentColor" viewBox="0 0 24 24">
            <path d="M20.216 6.415l-.132-.666c-.119-.598-.388-1.163-1.001-1.379-.197-.069-.42-.098-.57-.241-.152-.143-.196-.366-.231-.572-.065-.378-.125-.756-.192-1.133-.057-.325-.102-.69-.25-.987-.195-.4-.597-.634-.996-.788a5.723 5.723 0 00-.626-.194c-1-.263-2.05-.36-3.077-.416a25.834 25.834 0 00-3.7.062c-.915.083-1.88.184-2.75.5-.318.116-.646.256-.888.501-.297.302-.393.77-.177 1.146.154.267.415.456.692.58.36.162.737.284 1.123.366 1.075.238 2.189.331 3.287.37 1.218.05 2.437.01 3.65-.118.299-.033.598-.073.896-.119.352-.054.578-.513.474-.834-.124-.383-.457-.531-.834-.473-.466.074-.96.108-1.382.146-1.177.08-2.358.082-3.536.006a22.228 22.228 0 01-1.157-.107c-.086-.01-.18-.025-.258-.036-.243-.036-.484-.08-.724-.13-.111-.027-.111-.185 0-.212h.005c.277-.06.557-.108.838-.147h.002c.131-.009.263-.032.394-.048a25.076 25.076 0 013.426-.12c.674.019 1.347.067 2.017.144l.228.031c.267.04.533.088.798.145.392.085.895.113 1.07.542.055.137.08.288.111.431l.319 1.484a.237.237 0 01-.199.284h-.003c-.037.006-.075.01-.112.015a36.704 36.704 0 01-4.743.295 37.059 37.059 0 01-4.699-.304c-.14-.017-.293-.042-.417-.06-.326-.048-.649-.108-.973-.161-.393-.065-.768-.032-1.123.161-.29.16-.527.404-.675.701-.154.316-.06.619.196.953.014.018.029.033.046.049.168.15.408.222.657.291.645.18 1.33.283 2.006.349 1.006.1 2.025.168 3.042.186 1.568.035 3.138.012 4.699-.118.468-.04.937-.089 1.404-.15.392-.048.777-.1 1.15-.166.162-.027.324-.054.487-.089.136-.03.27-.071.401-.118.361-.13.705-.317.905-.65.307-.511.24-1.12.123-1.68z"/>
          </svg>
          Buy Me a Coffee
        </a>
        <p class="text-sm text-gray-400 mt-4 italic font-light">Every cup fuels more honest stories about faith, family, and finding joy in the chaos!</p>
      </div>
    </div>
  </section>

  <!-- Back to Blog -->
  <section class="py-16 px-4 bg-white">
    <div class="container mx-auto text-center">
      <a href="/blog" class="inline-flex items-center px-6 py-3 rounded-xl border border-gray-300 text-gray-700 font-medium tracking-wide hover:border-mcgennis-maroon hover:text-mcgennis-maroon transition-all duration-300">
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
        </svg>
        Back to All Blogs
      </a>
    </div>
  </section>
</BaseLayout>

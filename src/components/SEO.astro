      "https://www.facebook.com/calebmichaelmcgennis"
    ]
  }
})} />

<!-- Organization Schema -->
<script type="application/ld+json" set:html={JSON.stringify({
  "@context": "https://schema.org",
  "@type": "Organization",
  "name": "The McGennis Family",
  "url": siteUrl,
  "logo": `${siteUrl}/images/mcgennis-logo.png`,
  "contactPoint": {
    "@type": "ContactPoint",
    "contactType": "General Inquiry",
    "areaServed": "US-MO"
  },
  "areaServed": {
    "@type": "City",
    "name": "Jefferson City",
    "@id": "https://www.wikidata.org/wiki/Q28260"
  }
})} />

<!-- BlogPosting Schema for Articles -->
{type === 'article' && (
  <script type="application/ld+json" set:html={JSON.stringify({
    "@context": "https://schema.org",
    "@type": "BlogPosting",
    "headline": title,
    "image": imageUrl,
    "author": {
      "@type": "Person",
      "name": author || 'Caleb Michael McGennis',
      "url": `https://themcgennisfamily.com/family/${author === 'Stephanie Kay McGennis' ? 'stephanie' : 'caleb'}`
    },
    "publisher": {
      "@type": "Organization",
      "name": "The McGennis Family",
      "logo": {
        "@type": "ImageObject",
        "url": "https://themcgennisfamily.com/images/mcgennis-logo.png"
      }
    },
    "datePublished": publishedTime,
    "dateModified": publishedTime,
    "description": description,
    "mainEntityOfPage": {
      "@type": "WebPage",
      "@id": canonicalURL
    }
  })} />
)}


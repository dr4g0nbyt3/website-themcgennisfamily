---
export interface Props {
  title: string;
  description: string;
  image?: string;
  type?: 'website' | 'article' | 'profile';
  publishedTime?: string;
  author?: string;
  canonical?: string;
  breadcrumbs?: Array<{name: string; url: string}>;
}

const {
  title,
  description,
  image = '/images/mcgennis-family-og.jpg',
  type = 'website',
  publishedTime,
  author,
  canonical,
  breadcrumbs
} = Astro.props;

const siteUrl = 'https://themcgennisfamily.com';
const fullTitle = title.includes('McGennis') ? title : `${title} | The McGennis Family`;
const imageUrl = image.startsWith('http') ? image : `${siteUrl}${image}`;
const canonicalURL = canonical ? canonical : new URL(Astro.url.pathname, siteUrl).toString();
---

<!-- Primary Meta Tags -->
<title>{fullTitle}</title>
<meta name="title" content={fullTitle} />
<meta name="description" content={description} />
<link rel="canonical" href={canonicalURL} />

<!-- SEO Keywords -->
<meta name="keywords" content="McGennis Family, Jefferson City Missouri, Caleb McGennis, dr4g0nbyt3, BXP, Honey Homestead, Sports Crusaders, Jefferson City families, Missouri families, Jefferson City business" />
<meta name="author" content={author || 'Caleb Michael McGennis'} />
<meta name="geo.region" content="US-MO" />
<meta name="geo.placename" content="Jefferson City" />
<meta name="geo.position" content="38.5767;-92.1735" />
<meta name="ICBM" content="38.5767, -92.1735" />

<!-- Open Graph / Facebook -->
<meta property="og:type" content={type} />
<meta property="og:url" content={canonicalURL} />
<meta property="og:title" content={fullTitle} />
<meta property="og:description" content={description} />
<meta property="og:image" content={imageUrl} />
<meta property="og:image:width" content="1200" />
<meta property="og:image:height" content="630" />
<meta property="og:locale" content="en_US" />
<meta property="og:site_name" content="The McGennis Family" />

{publishedTime && <meta property="article:published_time" content={publishedTime} />}
{author && <meta property="article:author" content={author} />}

<!-- Twitter -->
<meta name="twitter:card" content="summary_large_image" />
<meta name="twitter:url" content={canonicalURL} />
<meta name="twitter:title" content={fullTitle} />
<meta name="twitter:description" content={description} />
<meta name="twitter:image" content={imageUrl} />
<meta name="twitter:creator" content="@dr4g0nbyt3" />

<!-- Favicon -->
<link rel="icon" type="image/x-icon" href="/favicon.ico" />

<!-- Fonts -->
<link rel="preconnect" href="https://fonts.googleapis.com" />
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&family=Playfair+Display:wght@700;900&display=swap" rel="stylesheet" />

<!-- WebSite Schema with Search Action -->
<script type="application/ld+json" set:html={JSON.stringify({
  "@context": "https://schema.org",
  "@type": "WebSite",
  "name": "The McGennis Family",
  "url": "https://themcgennisfamily.com",
  "description": "Family website featuring entrepreneurship, ministry, and family heritage. Based in Jefferson City, Missouri.",
  "publisher": {
    "@type": "Organization",
    "name": "The McGennis Family",
    "logo": {
      "@type": "ImageObject",
      "url": "https://themcgennisfamily.com/images/mcgennis-logo.png"
    }
  },
  "potentialAction": {
    "@type": "SearchAction",
    "target": {
      "@type": "EntryPoint",
      "urlTemplate": "https://themcgennisfamily.com/search?q={search_term_string}"
    },
    "query-input": "required name=search_term_string"
  },
  "inLanguage": "en-US",
  "copyrightYear": 2025,
  "copyrightHolder": {
    "@type": "Organization",
    "name": "The McGennis Family"
  }
})} />

<!-- Local Business Schema.org -->
<script type="application/ld+json" set:html={JSON.stringify({
  "@context": "https://schema.org",
  "@type": "LocalBusiness",
  "name": "The McGennis Family",
  "description": description,
  "url": siteUrl,
  "logo": `${siteUrl}/images/mcgennis-logo.png`,
  "image": imageUrl,
  "address": {
    "@type": "PostalAddress",
    "addressLocality": "Jefferson City",
    "addressRegion": "MO",
    "addressCountry": "US"
  },
  "geo": {
    "@type": "GeoCoordinates",
    "latitude": 38.5767,
    "longitude": -92.1735
  },
